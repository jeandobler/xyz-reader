<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cv_margin"
    android:layout_marginTop="@dimen/cv_margin"
    android:layout_marginRight="@dimen/cv_margin"
    android:layout_marginBottom="@dimen/cv_margin"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cv_article_list"
    android:foreground="?selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:transitionName="detail:header:image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_height"
                android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingLeft="@dimen/list_text_padding"
            android:paddingTop="@dimen/list_text_padding"
            android:paddingRight="@dimen/list_text_padding"
            android:paddingBottom="@dimen/list_text_padding_botton"
            android:textColor="@color/ltgray" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/list_text_padding"
            android:paddingRight="@dimen/list_text_padding"
            android:paddingBottom="@dimen/list_text_padding"
            android:textColor="@color/grey" />
    </LinearLayout>

</android.support.v7.widget.CardView>
